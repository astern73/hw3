<h1><%= @place.name %></h1>

<h2>Journal Entries</h2>

<ul>
  <% @place.entries.each do |entry| %>
    <li>
      <h3><%= entry.title %></h3>
      <p><%= entry.posted_on %></p>
      <p><%= entry.description %></p>
    </li>
  <% end %>
</ul>

<p>
  <a href="/places/<%= @place.id %>/entries/new">Add a new entry</a>
</p>

<p>
  <a href="/places">Back to all places</a>
</p>